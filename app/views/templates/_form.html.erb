<%= form_for([@user, @template]) do |f| %>
   <%= render "errors" %>
   <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, size: 40, autofocus: true, :class => "form-control" %>
   </div>
   <div class="form-group">
      <%= f.label :method_of_communication %>
      <%= f.select :method_of_communication, ["Phone", "Email", "Text Message", "Letter", "Postcard", "Face To Face", "Other"], prompt: "Must Choose One", :class => "form-control" %>
   </div>
   <div class="form-group">
      <%= f.label :task_description %>
      <%= f.text_area :task_description, :class => "form-control" %>
   </div>
   <div class="form-group">
      <%= f.label "Is this a private template?" %>
      <%= f.check_box :private, :class => "form-control" %>
   </div>
   <% if @template.new_record? %>
     <p><%= f.submit "Create Template", :type => "submit", :class => "btn btn-sm btn-default" %></p>
   <% else %>
     <p><%= f.submit "Update Template", :type => "submit", :class => "btn btn-sm btn-default" %></p>
   <% end %>
<% end %>
