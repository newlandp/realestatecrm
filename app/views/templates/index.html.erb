<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Templates <small><%= @user.name %></small>
        </h1>
    </div>
</div>

<div class="row">
   <div class="col-lg-8 col-lg-offset-2">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-heading">My Templates (<a href="<%= new_user_template_path(@user.id) %>">Add New</a>)</div>
         <div class="panel-body">
            <!-- START table-responsive-->
            <div class="table-responsive">
               <table class="table">
                  <thead>
                     <tr>
                        <th>Template Name</th>
                        <th>Method of Communication</th>
                     </tr>
                  </thead>
                  <tbody>
                     <% @templates.each do |template| %>
                         <tr>
                            <td><%= link_to template.name, user_template_path(template.user_id, template.id) %></td>
                            <td><%= template.method_of_communication %></td>
                         </tr>
                     <% end %>
                  </tbody>
               </table>
            </div>
            <!-- END table-responsive-->
         </div>
      </div>
      <!-- END panel-->
   </div>
</div>