<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Edit User Tasks Preferences
        </h1>
    </div>
</div>

<div class="col-sm-8 col-sm-offset-2">
  <div class="panel panel-default">
     <div class="panel-heading">Title</div>
     <div class="panel-body">
        <%= form_for(@user) do |f| %>
           <%= render "errors" %>
           <div class="field">
              <%= f.label "maximum tasks per day" %> <i class="fa fa-question-circle" id="popover"
                data-container="body" data-trigger="hover" data-toggle="popover" data-placement="top"
                data-content="This is the maximum number of items (people you need to contact) that will show up
                in your tasks panel on any given day."></i>
              <%= f.number_field :max_contacts_per_day, autofocus: true, style: "width: 60px" %>
           </div>
           <p><%= f.submit "Update tasks", :type => "submit", :class => "btn btn-sm btn-default" %></p>
        <% end %>
     </div>
  </div>
</div>

<script>
    //  http://getbootstrap.com/javascript/#tooltips
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
    
    $('#tooltip').tooltip()
    $('#popover').popover()
</script>